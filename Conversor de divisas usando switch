//realizar un conversor de divisas, utilizando el comando switch. el conversor debe de tomar en cuenta los siguientes valores
// convertiro pesos mexicanos a dolares
//convertit dolares a pesos mexicanos
//convertir pesos mexicanoa a euros
//convertir euros a pesos mexicanos
//convertir euro a dolar
//convertit dolar a euro
//dolar=18.5 pesos
//dolar=.95 euros
//euro=1.1 dolar
//euro=21.5 pesos
//peso=.05 dolares
//peso=.04 pesos

#include <iostream>
using namespace std;
int main()

{
    int opcion=0;
    float dolar=0, euro=0, peso=0, cantidad=0;
    cout<<"Bienvenido al conversor de unidades\n";
    cout<<"Seleccione la conversion que desea realizar:\n";
    cout<<"1)Peso a dolar\n";
    cout<<"2)Dolar a peso\n";
    cout<<"3)Dolar a euro\n";
    cout<<"4)Euro a dolar\n";
    cout<<"5)Peso a euro \n";
    cout<<"6)euro a peso\n";
    cin>>opcion;
    cout<<"Ingrese la cantidad que desea convertir:\n";
    cin>>cantidad;
    switch(opcion)
    {
        case 1 :dolar=cantidad*.05;cout<<cantidad<<" pesos, equivale a "<<dolar<<" dolar" ;break;
        case 2 :peso=cantidad*18.5;cout<<cantidad<<" dolar, equivale a "<<peso<<" pesos"; break;
        case 3 :euro=cantidad*.95;cout<<cantidad<<" dolares, equivalen a "<<euro<<" euros"; break;
        case 4 :euro=cantidad*1.1;cout<<cantidad<<" euro, equivalen a "<<euro<<" dolares"; break;
        case 5 :euro=cantidad*.04;cout<<cantidad<<" pesos, equivale a "<<euro<<" euros"; break;
        case 6 :euro=cantidad*21.5;cout<<cantidad<<" euros, equivalen a "<<euro<<" pesos"; break;
        default: cout<<"Opcion invalida, selecciona otra opcion\n";


    }
    







    return 0;
}



